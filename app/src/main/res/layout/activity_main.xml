<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/resultScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_screen_layout_height"
        android:background="@drawable/gradient_screen"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/result_text_margin_top"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="@string/default_value"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/result_text_size" />

        <TextView
            android:id="@+id/formulaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/formula_text_margin_top"
            android:paddingStart="@dimen/small_text_padding_x"
            android:paddingEnd="@dimen/small_text_padding_x"
            android:text="@string/example_formula"
            android:textAlignment="textEnd"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/formula_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mBarParentLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_bar_layout_height"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultScreenLayout">

        <LinearLayout
            android:id="@+id/mBarLeftLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/mPlusButton"
                android:layout_width="@dimen/m_button_size"
                android:layout_height="@dimen/m_button_size"
                android:text="@string/m_plus"
                android:textColor="@color/charcoal_blue"
                app:cornerRadius="0dp" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/mMinusButton"
                android:layout_width="@dimen/m_button_size"
                android:layout_height="@dimen/m_button_size"
                android:text="@string/m_minus"
                android:textColor="@color/charcoal_blue"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mBarRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/mSaveButton"
                android:layout_width="@dimen/m_button_size"
                android:layout_height="@dimen/m_button_size"
                android:text="@string/m_save"
                android:textColor="@color/charcoal_blue"
                app:cornerRadius="0dp" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/mClearButton"
                android:layout_width="@dimen/m_button_size"
                android:layout_height="@dimen/m_button_size"
                android:text="@string/m_clear"
                android:textColor="@color/charcoal_blue"
                app:cornerRadius="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>