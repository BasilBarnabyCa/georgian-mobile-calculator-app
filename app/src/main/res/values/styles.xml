<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Portrait-->
    <style name="calculator_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">"@color/charcoal_blue"</item>
        <item name="cornerRadius">@dimen/corner_radius_size</item>
    </style>

    <style name="text_button" parent="@style/calculator_button">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="font_icon_button" parent="@style/calculator_button">
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:textSize">@dimen/font_icon_text_size</item>
    </style>

    <style name="memory_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">@dimen/m_button_size</item>
        <item name="android:layout_height">@dimen/m_button_size</item>
        <item name="android:textColor">@color/charcoal_blue</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/font_icon_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_size</item>
    </style>

    <style name="round_memory_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">350dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/font_icon_text_size</item>
        <item name="android:textColor">@color/slate_blue</item>
        <item name="cornerRadius">@dimen/gradient_corner_radius_size</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="large_gradient_button" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@drawable/curved_gradient_button_background</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_size</item>
        <item name="rippleColor">@color/slate_blue</item>
    </style>

    <style name="image_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="image_button_portrait" parent="image_button">
        <item name="android:padding">@dimen/image_button_padding</item>
    </style>

    <style name="screen_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="result_text" parent="screen_text">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:layout_marginTop">@dimen/result_text_margin_top</item>
        <item name="android:paddingStart">@dimen/padding_x</item>
        <item name="android:paddingEnd">@dimen/padding_x</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/result_text_size</item>
    </style>

    <style name="formula_text" parent="screen_text">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:layout_marginTop">@dimen/formula_text_margin_top</item>
        <item name="android:paddingStart">@dimen/small_text_padding_x</item>
        <item name="android:paddingEnd">@dimen/small_text_padding_x</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/formula_text_size</item>
    </style>


    <!--Landscape-->
    <style name="gradient_button_land" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/curved_gradient_button_background</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_size</item>
        <item name="rippleColor">@color/slate_blue</item>
    </style>

    <style name="scientific_text_button" parent="@style/calculator_button">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/scientific_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="rounded_memory_button_land" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/font_icon_text_size</item>
        <item name="android:textColor">@color/slate_blue</item>
        <item name="cornerRadius">@dimen/small_corner_radius_size</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="image_button_land" parent="image_button">
        <item name="android:padding">@dimen/image_button_padding_land</item>
    </style>

    <style name="result_text_land" parent="result_text">
        <item name="android:layout_marginTop">@dimen/result_text_margin_top_land</item>
    </style>

    <style name="formula_text_land" parent="formula_text">
        <item name="android:layout_marginTop">@dimen/formula_text_margin_top_land</item>
    </style>

</resources>